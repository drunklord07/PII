-- Table to store sample rows
CREATE TABLE TABLE_SAMPLE_DATA (
    ID            NUMBER GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    OWNER_NAME    VARCHAR2(30),
    TABLE_NAME    VARCHAR2(30),
    SAMPLE_ROW    VARCHAR2(4000),
    FETCH_DATE    DATE DEFAULT SYSDATE
);

-- Table to log any errors
CREATE TABLE TABLE_SAMPLE_ERRORS (
    ID            NUMBER GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    OWNER_NAME    VARCHAR2(30),
    TABLE_NAME    VARCHAR2(30),
    ERROR_MESSAGE VARCHAR2(4000),
    ERROR_DATE    DATE DEFAULT SYSDATE
);
